<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="edu.berkeley.cs.amplab.carat.android.fragments.GlobalFragment">

    <include layout="@layout/loading_screen" />

    <ScrollView
        android:id="@+id/global_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/white"
            android:clickable="false">

            <TextView
                style="@style/LargeBoldBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/all_reports" />

            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/well_behaved_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/well_behaved_title"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/well_behaved_button" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/well_behaved_title"
                        android:layout_toLeftOf="@+id/well_behaved_button"
                        android:paddingRight="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/progress_bar" />

                    <TextView
                        android:id="@+id/well_behaved_title"
                        style="@style/LargeBlackText"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/well_behaved" />

                    <Button
                        android:id="@+id/well_behaved_button"
                        style="@style/InfoButtonStyle"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:text="i"
                        android:layout_alignBaseline="@+id/well_behaved_imageview"
                        android:layout_alignBottom="@+id/well_behaved_imageview"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/bugs_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/bugs_title"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/bugs_button"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/bugs_title"
                        android:layout_toLeftOf="@+id/bugs_button"
                        android:paddingRight="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/progress_bar" />

                    <TextView
                        android:id="@+id/bugs_title"
                        style="@style/LargeBlackText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="@string/bugs_camel" />

                    <Button
                        android:id="@+id/bugs_button"
                        style="@style/InfoButtonStyle"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:text="i"
                        android:layout_alignBaseline="@+id/bugs_imageview"
                        android:layout_alignBottom="@+id/bugs_imageview"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/hogs_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/hogs_title"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/hogs_button" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/hogs_title"
                        android:layout_toLeftOf="@+id/hogs_button"
                        android:paddingRight="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/progress_bar" />

                    <TextView
                        android:id="@+id/hogs_title"
                        style="@style/LargeBlackText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="@string/hogs_camel" />

                    <Button
                        android:id="@+id/hogs_button"
                        style="@style/InfoButtonStyle"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:text="i"
                        android:layout_alignBaseline="@+id/hogs_imageview"
                        android:layout_alignBottom="@+id/hogs_imageview"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                style="@style/LargeBoldBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/global_general_statistics" />

            <TextView
                android:id="@+id/all_general_text"
                style="@style/MediumBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/global_general_all_message" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/all_stats_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/all_stats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/progress_bar" />

            </RelativeLayout>

            <TextView
                android:id="@+id/android_general_text"
                style="@style/MediumBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/global_general_android_message" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/android_stats_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/android_stats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/progress_bar" />

            </RelativeLayout>

            <TextView
                android:id="@+id/ios_general_text"
                style="@style/MediumBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/global_general_ios_message" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/ios_stats_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/ios_stats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/progress_bar" />

            </RelativeLayout>

            <TextView
                android:id="@+id/user_general_text"
                style="@style/MediumBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/global_general_users_message" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/user_stats_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/user_stats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/progress_bar" />

            </RelativeLayout>

            <TextView
                style="@style/LargeBoldBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/global_general_popular_title" />

            <TextView
                android:id="@+id/device_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
